<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tellso" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/iron_200</item>
        <item name="colorPrimaryVariant">@color/iron_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/suva_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/My_TextAppearance_Toolbar</item>
    </style>

    <style name="My_TextAppearance_Toolbar" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/smooth</item>
        <item name="android:fontFamily">@font/smooth</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/segoe_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
</resources>